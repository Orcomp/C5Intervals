<Window x:Class="C5.Performance.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.codeplex.com"
        xmlns:wpf="clr-namespace:C5.Performance.Wpf"
        Title="C5 Interval Plotter" Width="800" Height="600">
    <Grid>
        <oxy:Plot Model="{Binding (wpf:Plotter.PlotModel)}" Margin="0" Grid.Row="1" />
        <Button Height="23" HorizontalAlignment="Left" Margin="10,0,0,10" 
            x:Name="button1" VerticalAlignment="Bottom"
            Width="75" Click="button1_Click_1" Content="Benchmark"/>
        <Label x:Name="StatusLabel" Content="" HorizontalAlignment="Left" Margin="44,9,0,0" VerticalAlignment="Top" Height="45" FontWeight="Bold"/>
        <Label x:Name="RunningLabel" Content="" HorizontalAlignment="Left" Margin="520,9,0,516.667" FontWeight="Bold" RenderTransformOrigin="0.667,-0.272"/>
    </Grid>
</Window>
